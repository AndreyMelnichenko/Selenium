<suite name="Parallel Tests" verbose="1" thread-count="1" parallel="tests">
    <tests>
        <test name="Linux + Chrome Test">
        <parameters>
            <parameter name="platform" value="Linux" />
            <parameter name="remoteBrowser" value="chrome"/>
        </parameters>
        <classes>
            <class name="com.google.AlertTest" />
            <class name="com.google.SearchGoogleTest" />
        </classes>
    </test>
    <test name="Linux + FireFox Test">
         <parameters>
             <parameter name="platform" value="Linux" />
             <parameter name="remoteBrowser" value="firefox"/>
         </parameters>
         <classes>
             <class name="com.google.AlertTest" />
             <class name="com.google.SearchGoogleTest" />
         </classes>
     </test>
     </tests>
 </suite>